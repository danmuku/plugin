{
  "manifest_version": 2,
   "author": {
      "email": "veryyoung.me@gmail.com"
   },
   "background": {
      "scripts": [ "js/background.js" ]
   },
  "name": "danmaco",
  "description": "在任何网页上都可以弹幕啦！！",
  "version": "1.0",   
  "icons": {
      "128": "icon.png",
      "16": "icon.png",
      "48": "icon.png"
   },
   "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["js/jquery.min.js", "js/danmaco.js", "js/firebase.js"]
    }],
  "browser_action": {
    "default_icon": "close.png",
    "default_popup": "popup.html"
  },

  "permissions": [ "webRequest", "webRequestBlocking", "*://*/", "tabs", "contextMenus", "storage" ]
}
